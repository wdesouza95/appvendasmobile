<HomePage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos:self.pos
                source: "icones/bg1.png"
        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao_fino.png"

            pos_hint:{"right":0.85, "top":0.95}
            size_hint: 0.7,0.2
            text: "Total de Vendas: R$ 0,00"
            id: label_total_vendas
            markup: True

        # lista de vendas
        ScrollView:
            pos_hint:{"right":1, "top":0.75}
            size_hint: 1, 0.63
            GridLayout:
                cols:1
                id: lista_vendas
                spacing: 2, 2

                #sempre passar esses quatro parametros
                #se for horizontal x, width, column_default_width, column_force_width
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True


        # 3 botoes homepage
        GridLayout:
            pos_hint:{"right":1, "top":0.12}
            size_hint:1,0.12
            rows: 1
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#076D7E")
                Rectangle:
                    size: self.size
                    pos:self.pos
            # botao add
            ImageButton:
                source: "icones/add.png"
                on_release: app.mudar_tela("adicionarvendaspage")
            # botao lista de vendedores
            ImageButton:
                source: "icones/salesman.png"
                on_release: app.mudar_tela("listarvendedorespage")
            # botao ajustes
            ImageButton:
                source: "icones/settings.png"
                on_release: app.mudar_tela("ajustespage")