<FotoPerfilPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos:self.pos
                source: "icones/bg1.png"
        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao_fino.png"

            pos_hint:{"right":0.85, "top":0.95}
            size_hint: 0.7,0.2
            text: "Selecione sua Foto de Perfil:"
            bold: True

        #lista de imagens
        ScrollView:
            pos_hint:{"right":0.9, "top":0.7}
            size_hint: 0.8, 0.58
            GridLayout:
                id:lista_fotos_perfil
                cols:3
                spacing: 1, 1

                #sempre passar esses quatro parametros
                #se for horizontal x, width, column_default_width, column_force_width
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True



        # Botao de voltar
        FloatLayout:
            pos_hint:{"right":1, "top":0.12}
            size_hint:1,0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#076D7E")
                Rectangle:
                    size: self.size
                    pos:self.pos
            ImageButton:
                pos_hint:{"right":0.2, "top":0.9}
                size_hint:0.2,0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("ajustespage")